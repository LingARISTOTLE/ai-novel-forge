<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.novel.forge.mapper.NovelMapper">

    <resultMap id="NovelResultMap" type="com.novel.forge.entity.Novel">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="description" column="description" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findAll" resultMap="NovelResultMap">
        SELECT * FROM novels ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="NovelResultMap">
        SELECT * FROM novels WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.novel.forge.entity.Novel" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO novels (title, description, created_at, updated_at)
        VALUES (#{title}, #{description}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.novel.forge.entity.Novel">
        UPDATE novels
        SET title = #{title},
            description = #{description},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM novels WHERE id = #{id}
    </delete>

</mapper>
